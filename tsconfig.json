{
    "compilerOptions": {
        "target": "es5",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "jsx": "preserve",
        "sourceMap": true,
        "jsxFactory": "h",
        "lib": [
            "dom",
            "es2015",
            "es2017"
        ]
    }
}